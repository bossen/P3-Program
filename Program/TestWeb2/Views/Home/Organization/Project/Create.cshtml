@model Model.VolunteerProject

@{
    ViewBag.Title = "Create";
}

<h2>Create new project.</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Profile</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Location.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.Address)
            @Html.ValidationMessageFor(model => model.Location.Address)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Location.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location.City)
            @Html.ValidationMessageFor(model => model.Location.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Time.Date)
            @Html.ValidationMessageFor(model => model.Time.Date)
        </div>
            
        <div class="editor-label">
            @Html.LabelFor(model => model.Topics)
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.Topics, new MultiSelectList(Model.Topics))
            @Html.ValidationMessageFor(model => model.Topics)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        @Html.LabelFor(model => model.Signup) @Html.CheckBoxFor(model => model.Signup, false)
        


        <p>
            <input type="submit" value="Save" />
        </p>
            
    </fieldset>
}