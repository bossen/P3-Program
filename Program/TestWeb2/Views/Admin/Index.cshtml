@model TestWeb2.Models.MultiViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Model.Admin.Association == null)
{ 
    <table border="1">
    <tr>
    <th>
        Are you joining an already existing organization or do you wish to create a new organization?
    </th>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Join Organization", "Organizations", "Admin")
        </td>
        <td>
            @Html.ActionLink("Create Organization", "Create", "Admin")
        </td>
    </tr>
</table>
}

@if(Model.Admin.Association != null)
{
<h2>Hi @Model.Admin.UserName</h2>

<p>You have the following options:</p>

@Html.ActionLink(Model.Admin.Association.Name, "Index", "Organization")
}