@model IEnumerable<Model.Organization>

@{
    ViewBag.Title = "Organizations";
}

@if(ViewBag.Authenticated)
{
    <h1>You're already in an Organization</h1>
    <p>Go to your organization here: @Html.ActionLink("Your Organization", "Index", "Organization")</p>

    
}
<h1>Organizations</h1>
@foreach (var item in Model)
{ 
    <table>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creation)
            </td>
            <td>
                @Html.ActionLink("Join", "Index", "Organization")
                @Html.ActionLink("Details", "Organization", new { id=item.Id }) 
            </td>
        </tr>
    </table>
}

